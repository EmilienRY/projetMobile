<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFBEF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/nameText"
            android:text="@string/name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#CED8B6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/rounded_image_bg"
            android:elevation="3dp"
            android:padding="2dp"
            android:layout_gravity="center"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="350dp"
                android:maxHeight="350dp"
                android:scaleType="fitCenter" />

        </FrameLayout>


        <TextView
            android:id="@+id/imageInfos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#68491C"
            android:background="#F7F5EF"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="2dp"
            android:padding="8dp"
            android:elevation="1dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#F7F5EF"/>




        <LinearLayout
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:padding="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_gravity="center_horizontal"
            android:elevation="6dp"
            android:backgroundTint="#FAEFD9"
            android:clipToOutline="true"
            android:background="@drawable/rounded_card">

            <TextView
                android:id="@+id/algoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Algorithme"
                android:textStyle="bold"
                android:textColor="#68491C"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/paramText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ParamÃ¨tres"
                android:textColor="#68491C"
                android:textSize="15sp"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <Button
                android:id="@+id/btnCompare"
                android:text="@string/compare"
                android:layout_margin="12dp"
                android:backgroundTint="#CED8B6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"/>

            <Button
                android:id="@+id/btnCompress"
                android:text="@string/compress"
                android:layout_margin="12dp"
                android:backgroundTint="#CED8B6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="24dp">



            <ImageButton
                android:src="@drawable/ic_arrow_back"
                android:backgroundTint="#D4A373"
                android:layout_margin="10dp"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/rounded_button"
                android:elevation="2dp"
                android:onClick="onBackPressed"/>

            <ImageButton
                android:id="@+id/btnDelete"
                android:src="@drawable/ic_delete"
                android:backgroundTint="#D4A373"
                android:layout_margin="10dp"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/rounded_button"
                android:elevation="2dp"/>

            <ImageButton
                android:id="@+id/btnSaveToGallery"
                android:src="@drawable/ic_download"
                android:layout_margin="10dp"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/rounded_button"
                android:elevation="2dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
